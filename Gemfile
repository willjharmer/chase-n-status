  gem 'pry'
  gem 'pry-nav'
  gem 'pry-remote'
  gem 'guard-livereload', '~> 2.4', require: false
  gem 'guard-rspec', require:false
  gem 'guard-cucumber', require: false
  gem 'shotgun'
end

group :test do
  gem 'rspec'
  gem 'rspec-nc'
  gem 'cucumber'
  gem 'capybara'
end
